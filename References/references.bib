@article{lin_serum_2019,
	title = {Serum {Secretogranin} {III} {Concentrations} {Were} {Increased} in {Subjects} with {Metabolic} {Syndrome} and {Independently} {Associated} with {Fasting} {Plasma} {Glucose} {Levels}},
