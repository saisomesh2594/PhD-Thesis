Publisher: Nature Publishing Group},
	keywords = {Hormone receptors, Type 2 diabetes, glp-1},
	pages = {2661},
}

@article{ren_novel_2019,
	title = {Novel {GLP}-1 {Analog} {Supaglutide} {Stimulates} {Insulin} {Secretion} in {Mouse} and {Human} {Islet} {Beta}-{Cells} and {Improves} {Glucose} {Homeostasis} in {Diabetic} {Mice}},
