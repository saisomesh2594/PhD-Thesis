	journal = {Diabetes Care},
	author = {Zaharia, Oana-Patricia and Antoniou, Sofia and Bobrov, Pavel and Karusheva, Yanislava and Bódis, Kálmán and Kupriyanova, Yuliya and Schrauwen-Hinderling, Vera and Gastaldelli, Amalia and Szendroedi, Julia and Wagner, Robert and Burkart, Volker and Roden, Michael and {GDS Group}},
