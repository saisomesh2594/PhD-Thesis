@article{najjar_hepatic_2019,
	title = {Hepatic {Insulin} {Clearance}: {Mechanism} and {Physiology}},
	volume = {34},
	issn = {1548-9213},
	shorttitle = {Hepatic {Insulin} {Clearance}},
	url = {https://www.ncbi.nlm.nih.gov/pmc/articles/PMC6734066/},
