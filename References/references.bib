	urldate = {2022-10-19},
	journal = {Molecular Metabolism},
	author = {Tritschler, Sophie and Thomas, Moritz and Böttcher, Anika and Ludwig, Barbara and Schmid, Janine and Schubert, Undine and Kemter, Elisabeth and Wolf, Eckhard and Lickert, Heiko and Theis, Fabian J.},
