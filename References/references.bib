	journal = {The Journal of Immunology},
	author = {Lacey, Derek C. and Achuthan, Adrian and Fleetwood, Andrew J. and Dinh, Hang and Roiniotis, John and Scholz, Glen M. and Chang, Melody W. and Beckman, Sandra K. and Cook, Andrew D. and Hamilton, John A.},
	month = jun,
	year = {2012},
	note = {Publisher: The American Association of Immunologists},
	pages = {5752--5765},
}

@article{bergman_human_2017,
