@article{mcgillicuddy_interferon_2009,
	title = {Interferon γ {Attenuates} {Insulin} {Signaling}, {Lipid} {Storage}, and {Differentiation} in {Human} {Adipocytes} via {Activation} of the {JAK}/{STAT} {Pathway}},
