@article{xu_plate-based_2021,
	title = {A plate-based single-cell {ATAC}-seq workflow for fast and robust profiling of chromatin accessibility},
	volume = {16},
	copyright = {2021 The Author(s), under exclusive licence to Springer Nature Limited},
	issn = {1750-2799},
	url = {https://www.nature.com/articles/s41596-021-00583-5},
