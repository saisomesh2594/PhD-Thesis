	keywords = {Algorithms, Computer Simulation, Data Interpretation, Statistical, Gene Expression Profiling, Genes, cdc, Genetic Variation, Genomics, Humans, Inflammation, Microarray Analysis, Models, Statistical, Phenotype, Principal Component Analysis, Saccharomyces cerevisiae, Saccharomyces cerevisiae Proteins, Software, Stress Disorders, Post-Traumatic},
