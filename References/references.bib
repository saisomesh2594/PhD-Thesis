	journal = {Frontiers in Physiology},
	author = {Ren, Liwei and Cui, Qiaoli and Liu, Wenjuan and Wang, Liqian and Liao, Yijing and Feng, Ying and Sun, Wanwan and Yang, Yehong and Zhang, Zhaoyun and Jin, Tianru and Prud’homme, Gerald J. and Zhang, Lina and Li, Yiming and Leng, Ying and Wang, Qinghua},
