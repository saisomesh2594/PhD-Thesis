@article{nishimura_cd8+_2009,
	title = {{CD8}+ effector {T} cells contribute to macrophage recruitment and adipose tissue inflammation in obesity},
	volume = {15},
	issn = {10788956},
	url = {http://dx.doi.org/10.1038/nm.1964},
