	journal = {Nature},
	author = {He, Shun and Kahles, Florian and Rattik, Sara and Nairz, Manfred and McAlpine, Cameron S. and Anzai, Atsushi and Selgrade, Daniel and Fenn, Ashley M. and Chan, Christopher T. and Mindur, John E. and Valet, Colin and Poller, Wolfram C. and Halle, Lennard and Rotllan, Noemi and Iwamoto, Yoshiko and Wojtkiewicz, Gregory R. and Weissleder, Ralph and Libby, Peter and Fernández-Hernando, Carlos and Drucker, Daniel J. and Nahrendorf, Matthias and Swirski, Filip K.},
