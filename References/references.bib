	journal = {Nature Medicine},
	author = {Nishimura, Satoshi and Manabe, Ichiro and Nagasaki, Mika and Eto, Koji and Yamashita, Hiroshi and Ohsugi, Mitsuru and Otsu, Makoto and Hara, Kazuo and Ueki, Kohjiro and Sugiura, Seiryo and Yoshimura, Kotaro and Kadowaki, Takashi and Nagai, Ryozo},
