@article{rodriguez-diaz_autonomic_2011,
	title = {{AUTONOMIC} {AXONS} {IN} {THE} {HUMAN} {ENDOCRINE} {PANCREAS} {SHOW} {UNIQUE} {INNERVATION} {PATTERNS}},
