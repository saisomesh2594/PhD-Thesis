	author = {Ijsselsteijn, Marieke E and Somarakis, Antonios and Lelieveldt, Boudewijn P F and Hollt, Thomas and De Miranda, Noel F C C},
	keywords = {Background removal, CyTOF, Imaging mass cytometry, Multiplex immunophenotyping},
}

@article{ali_imaging_2020,
	title = {Imaging mass cytometry and multiplatform genomics define the phenogenomic landscape of breast cancer},
