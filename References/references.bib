	author = {Grodsky, G. M.},
	month = aug,
	year = {1972},
	pmid = {4559946},
	pmcid = {PMC292361},
	keywords = {Animals, Computers, Glucose, Humans, Insulin, Insulin Secretion, Islets of Langerhans, Models, Biological, Rats, Stimulation, Chemical},
	pages = {2047--2059},
}

@article{rorsman_insulin_2003,
