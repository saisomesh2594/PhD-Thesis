}

@article{zaharia_reduced_2023,
	title = {Reduced {Insulin} {Clearance} {Differently} {Relates} to {Increased} {Liver} {Lipid} {Content} and {Worse} {Glycemic} {Control} in {Recent}-{Onset} {Type} 2 and {Type} 1 {Diabetes}},
