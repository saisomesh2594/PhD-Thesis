	keywords = {Animals, Antigens, CD, Antigens, Differentiation, Antigens, Differentiation, Myelomonocytic, Blood Glucose, Cytokines, Diabetes Mellitus, Type 2, Disease Models, Animal, Disease Progression, Humans, Immunophenotyping, Inflammation Mediators, Insulin, Islets of Langerhans, Macrophages, Male, Mice, Phenotype, cytokines, inflammation, insulin},
