@article{eguchi_saturated_2012,
	title = {Saturated fatty acid and {TLR} signaling link β cell dysfunction and islet inflammation},
	volume = {15},
	issn = {15504131},
	url = {http://dx.doi.org/10.1016/j.cmet.2012.01.023},
