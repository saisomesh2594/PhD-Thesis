	journal = {Journal of Experimental Medicine},
	author = {Calderon, Boris and Carrero, Javier A. and Ferris, Stephen T. and Sojka, Dorothy K. and Moore, Lindsay and Epelman, Slava and Murphy, Kenneth M. and Yokoyama, Wayne M. and Randolph, Gwendalyn J. and Unanue, Emil R.},
