	author = {Hurskainen, Maria and Mižíková, Ivana and Cook, David P and Andersson, Noora and Cyr-Depauw, Chanèle and Lesage, Flore and Helle, Emmi and Renesme, Laurent and Jankov, Robert P and Heikinheimo, Markku and Vanderhyden, Barbara C and Thébaud, Bernard},
}

@article{argelaguet_computational_2021,
	title = {Computational principles and challenges in single-cell data integration},
