	author = {Dimitriadis, George and Mitrou, Panayota and Lambadiari, Vaia and Boutati, Eleni and Maratou, Eirini and Koukkou, Efi and Tzanela, Marinela and Thalassinos, Nikolaos and Raptis, Sotirios A.},
