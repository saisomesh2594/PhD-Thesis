@article{pagliaro_single-cell_2020-1,
	title = {Single-{Cell} {Transcriptome} in {Chronic} {Myeloid} {Leukemia}: {Pseudotime} {Analysis} {Reveals} {Evidence} of {Embryonic} and {Transitional} {Stem} {Cell} {States}},
