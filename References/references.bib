@article{polidori_hepatic_2016,
	title = {Hepatic and {Extrahepatic} {Insulin} {Clearance} {Are} {Differentially} {Regulated}: {Results} {From} a {Novel} {Model}-{Based} {Analysis} of {Intravenous} {Glucose} {Tolerance} {Data}},
